<?xml version="1.0" encoding="UTF-8" ?>
<extension version="2.5" type="plugin" group="vmpayment" method="upgrade">
    <name>Tap Payments</name>
    <creationDate>May 06 2015</creationDate>
    <author>Tap Development Team</author>
    <authorUrl>https://www.gotapnow.com</authorUrl>
    <copyright>Copyright (C) 2015 Tap Team. All rights reserved.</copyright>
    <license>https://www.gotapnow.com</license>
    <version>3.0.9</version>
    <description>Tap payment plugin</description>

    <files>
        <filename plugin="tap">tap.php</filename>
        <folder>language</folder>
    </files>

    <vmconfig>
        <fields name="params">
            <fieldset name="payment"  addfieldpath="/administrator/components/com_virtuemart/fields">
               <!--  <field name="payment_merchant_id" type="text" label="VMPAYMENT_TAP_MERCHANT_ID"
                     description="VMPAYMENT_TAP_MERCHANT_ID_TIP"/>
                <field name="payment_username" type="text" label="VMPAYMENT_TAP_USERNAME"
                     description="VMPAYMENT_TAP_USERNAME_TIP"/>
              <field name="payment_password" type="text" label="VMPAYMENT_TAP_PASSWORD"
                     description="VMPAYMENT_TAP_PASSWORD_TIP"/> -->
                <field name="payment_currency" type="vmacceptedcurrency" default="" label="VMPAYMENT_TAP_CURRENCY"
                       description="VMPAYMENT_TAP_CURRENCY_TIP"/>
                <field name="status_pending" type="vmorderstate" scope="com_virtuemart" default="U"
                       label="VMPAYMENT_TAP_STATUS_PENDING" description="VMPAYMENT_TAP_STATUS_PENDING_TIP"/>
                <!--<field name="send_invoice_on_order_null" type="radio" scope="com_virtuemart" default="1"
                       label="VMPAYMENT_TAP_SEND_INVOICE_ON_ORDER_NULL"
                       description="VMPAYMENT_TAP_SEND_INVOICE_ON_ORDER_NULL_TIP">
                    <option value="0">COM_VIRTUEMART_NO</option>
                    <option value="1">COM_VIRTUEMART_YES</option>
                </field>-->
              <field name="payment_mode" type="radio" scope="com_virtuemart" default="1"
                       label="VMPAYMENT_TAP_PAYMENT_MODE"
                       description="VMPAYMENT_TAP_PAYMENT_MODE_TIP">
                <option value="0">COM_VIRTUEMART_NO</option>
                <option value="1">COM_VIRTUEMART_YES</option>
              </field>
            </fieldset>
            <fieldset name="template">
                <field name="payment_logos" type="vmfiles" multiple="true" directory="/images/stories/virtuemart/payment"
                       hide_none="1" label="VMPAYMENT_TAP_LOGOS"
                       size="40"
                       description="VMPAYMENT_TAP_LOGOS_TIP"/>
                <field name="payment_info" type="textarea" cols="35" rows="5" label="VMPAYMENT_TAP_PAYMENTINFO"
                       description="VMPAYMENT_TAP_PAYMENTINFO_TIP"/>
            </fieldset>
            <!--<fieldset name="restrictions" >
                <field name="countries" multiple="true" type="vmcountries" scope="com_virtuemart" default=""
                       label="VMPAYMENT_TAP_COUNTRIES" description="VMPAYMENT_TAP_COUNTRIES_TIP"/>
                <field name="min_amount" type="text" label="VMPAYMENT_TAP_MIN_AMOUNT"
                       description="VMPAYMENT_TAP_MIN_AMOUNT_TIP"/>
                <field name="max_amount" type="text" label="VMPAYMENT_TAP_MAX_AMOUNT"
                       description="VMPAYMENT_TAP_MAX_AMOUNT_TIP"/>
            </fieldset>-->
            <!--<fieldset name="fee">
                <field name="cost_per_transaction" type="text" label="VMPAYMENT_TAP_COST_PER_TRANSACTION"
                       description="VMPAYMENT_TAP_COST_PER_TRANSACTION_TIP"/>
                <field name="cost_percent_total" type="text" label="VMPAYMENT_TAP_COST_PERCENT_TOTAL"
                       description="VMPAYMENT_TAP_COST_PERCENT_TOTAL_TIP"/>
                <field name="tax_id" type="vmtaxes" scope="com_virtuemart" label="VMPAYMENT_TAP_TAX"
                       description="VMPAYMENT_TAP_TAX_TIP"/>
            </fieldset>-->
        </fields>
    </vmconfig>
    <updateservers>
        <!-- Note: No spaces or linebreaks allowed between the server tags -->
        <server type="extension" name="VirtueMart plg_vmpayment_tap Update Site"><![CDATA[http://virtuemart.net/releases/vm3/plg_vmpayment_tap_update.xml]]></server>
    </updateservers>

</extension>
